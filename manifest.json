{

  "name": "Picture-in-Picture Extension (for Discord)",
  "description": "Watch other people's webcams using Picture-in-Picture",
  "version": "1.0",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 3
}
